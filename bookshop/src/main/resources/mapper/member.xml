<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">
	
	<select id="list" resultType="Member">
		SELECT * FROM member
	</select>
	
	<insert id="add">
		INSERT INTO member
		VALUES (#{id}, #{password}, #{name}, #{tell})
	</insert>
	
	<update id="update">
		UPDATE member
		SET PASSWORD = #{password}, NAME = #{name}, TELL = #{tell}
		WHERE ID = #{id}
	</update>
	
	<delete id="delete">
		DELETE FROM member
		WHERE ID = #{id}
	</delete>
	
	<select id="item" resultType="Member">
		SELECT * FROM member
		WHERE ID = #{id}
	</select>
</mapper>